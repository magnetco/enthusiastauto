generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model ChatConversation {
  id          String        @id
  userId      String?
  sessionId   String?
  title       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime
  User        User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  ChatMessage ChatMessage[]

  @@index([sessionId])
  @@index([updatedAt])
  @@index([userId])
}

model ChatMessage {
  id               String           @id
  conversationId   String
  role             String
  content          String
  toolCalls        Json?
  metadata         Json?
  createdAt        DateTime         @default(now())
  ChatConversation ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdAt])
}

model SellSubmission {
  id               String   @id
  firstName        String
  lastName         String
  phone            String
  email            String
  make             String
  model            String
  year             String
  mileage          String
  vin              String
  notes            String?
  sellOption       String   @default("sell")
  existingCustomer Boolean  @default(false)
  newsletter       Boolean  @default(false)
  status           String   @default("pending")
  createdAt        DateTime @default(now())
  updatedAt        DateTime

  @@index([createdAt])
  @@index([email])
  @@index([sellOption])
  @@index([status])
}

model ServiceRequest {
  id               String   @id
  serviceType      String
  name             String
  email            String
  phone            String
  vehicleYear      String
  vehicleMake      String
  vehicleModel     String
  vin              String?
  description      String
  existingCustomer Boolean  @default(false)
  status           String   @default("pending")
  createdAt        DateTime @default(now())
  updatedAt        DateTime

  @@index([createdAt])
  @@index([email])
  @@index([status])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionToken])
}

model User {
  id               String             @id
  name             String?
  email            String             @unique
  emailVerified    DateTime?
  password         String?
  image            String?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime
  addresses        Json?
  Account          Account[]
  ChatConversation ChatConversation[]
  Session          Session[]
  UserFavorite     UserFavorite[]

  @@index([email])
}

model UserFavorite {
  id         String   @id
  userId     String
  itemType   String
  itemId     String
  createdAt  DateTime @default(now())
  itemHandle String?
  User       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, itemId, itemType])
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model DataVersions {
  id         Int       @id @default(autoincrement())
  table_name String
  record_id  String
  field_name String
  old_value  String?
  new_value  String?
  changed_at DateTime? @default(now()) @db.Timestamp(6)
  changed_by String?   @default("admin")

  @@map("_DataVersions")
}
