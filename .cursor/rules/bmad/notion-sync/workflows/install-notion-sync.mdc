# Notion Project Reporter - Installation Workflow
# Configure Notion integration and project settings
name: install-notion-sync
description: "Configure Notion integration and project settings"
author: "Mike"

# Paths
installed_path: '{project-root}/bmad/notion-sync/workflows/install-notion-sync'
template: false  # Action workflow - no document generation
instructions: '{installed_path}/instructions.md'
validation: '{installed_path}/checklist.md'

# Critical variables from config
config_source: '{project-root}/bmad/notion-sync/config.yaml'
output_folder: '{config_source}:output_folder'
user_name: '{config_source}:user_name'
communication_language: '{config_source}:communication_language'
date: system-generated

# Module-specific config paths
config_file: '{project-root}/bmad/notion-sync/config.yaml'
data_directory: '{project-root}/bmad/notion-sync/data'
changelog_file: '{project-root}/bmad/notion-sync/data/changelog.md'

# Recommended inputs (optional - user may not have these yet)
recommended_inputs:
  - notion_token: "Notion API token from https://www.notion.so/my-integrations"
  - notion_workspace: "Notion workspace URL for database discovery"

# Invocation control - can be called directly or from Setup Agent
standalone: true

# Workflow metadata
complexity: standard
interaction_style: mixed  # Intent-based with prescriptive moments
interactivity_level: high  # Collaborative setup process
theme: mission-control  # NASA/space themed language
